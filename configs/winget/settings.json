{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    // For documentation on these settings, see: https: //aka.ms/winget-settings
    "source": {
        "autoUpdateIntervalInMinutes": 300 // Updates winget ever 5 hours
    },
    "installBehavior": {
        "preferences": {
            "scope": "machine" // Installs software for all the Users in a machine
        },
        "locale": [
            "en-US" // Configures the language settings for winget
        ]
    },
    "telemetry": {
        "disable": true // Disables winget to send any user information to Microsoft
    },
    "visual": {
        "progressBar": "rainbow" // Enables winget to use a colourful progress-bar instead of a broing single-coloured one
    },
    "experimentalFeatures": {
        "experimentalMSStore": true, // Enables winget to also download software from the MS Store
    }
}
